<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fruithapnotifier.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.ServiceControlActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity="" >
        </activity>
        <activity
            android:name=".ui.EventNotificationListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.EventNotificationDetailActivity"
            android:label="@string/title_eventnotification_detail"
            android:parentActivityName=".ui.EventNotificationListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.EventNotificationListActivity" />
        </activity>

        <service
            android:name=".service.FruithapNotificationService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <receiver
            android:name=".ui.ServiceControlReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.fruithapnotifier.app.action.START_SERVICE" />
                <action android:name="com.fruithapnotifier.app.action.STOP_SERVICE" />
            </intent-filter>
        </receiver>

        <service
            android:name=".service.FruithapRpcService"
            android:exported="false" >
        </service>
    </application>

</manifest>
